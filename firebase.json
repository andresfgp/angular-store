{
  "hosting": {
    "public": "dist/store",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],   
    "headers": [ {
      "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      }]
    }]
  },
  "rewrites": [
    {
      "source": "/api/v1/**",
      "function": "webApi"
    }
  ],
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  }
}
